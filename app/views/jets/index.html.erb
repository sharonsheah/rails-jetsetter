<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1474302770737-173ee21bab63?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1564&q=80">
    Our Elite Fleets
</div>


<div class="container">
  <div class="container mt-3 d-flex justify-content-center">
    <%= render 'shared/search-bar' %>
  </div>
  <div class="jets-grid">
      <% @jets.each do |jet| %>  
        <div class="cards-index"> 
          <%= link_to jet_path(jet) do %>
            <div class="card card-jets-index">
              <% if jet.photo.attached? %>
                <img class="card-img-top" src="<%= cl_image_path jet.photo.key %>" alt="Card image cap">
              <% else %>
                <img class="card-img-top" src="https://images.unsplash.com/photo-1566827267844-39de9bcad5ee?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1291&q=80" alt="Card image cap">
              <% end %>
                <div class="card-description">
                  <div class="card-body">
                    <h5 class="card-title"><%= jet.name %></h5>
                    <p class="card-text"><%= jet.origin %></p>
                  </div>
                  <div>
                      <h3 class="card-trip-pricing"></h3>$<%= number_with_delimiter(jet.price, :delimiter => ',') %></h3>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      <% end %>
    
  </div>
</div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
