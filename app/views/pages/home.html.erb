

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1474302770737-173ee21bab63?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1564&q=80);">
  <div class="container text-center">
    <h1>Jetsetter</h1>
    <p>Live a high life</p>
  </div>


    <form class="form-inline" novalidate>
        <div class="form-row">
            <label for="departure">
                <div class="d-block">
                    <div class="d-block">Departure</div>
                    <input type="text" class="form-control" id="departure" placeholder="Departure" value="JFK" required>
                </div>
            </label>
            
            <label for="arrival">
                <div class="d-block">
                    <div class="d-block">Arrival</div>
                    <input type="text" class="form-control" id="arrival" placeholder="Arrival" value="MIA" required>
                </div>
            </label>

            <label for="passengers">
                <div class="d-block">
                    <div class="d-block">Passangers</div>
                    <input type="integer" class="form-control" id="passengers" placeholder="Passangers" aria-describedby="inputGroupPrepend" required>
                </div>
            </label>
        
            <label for="start_date">
                <div class="d-block">
                    <div class="d-block">Start date</div>
                    <input type="datetime-local" class="form-control" id="start_date" placeholder="Start Date" required>
                </div>
            </label>

            <label for="end_date">
                <div class="d-block">
                    <div class="d-block">End date</div>
                    <input type="datetime-local" class="form-control" id="end_date" placeholder="End Date" required>
                </div>
            </label>

            <button class="btn btn-light" type="submit"><i class="fas fa-search"></i></button>
        </div>
    </form>
</div>
